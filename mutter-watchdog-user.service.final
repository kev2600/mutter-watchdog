[Unit]
Description=NVIDIA Wayland Stability Toolkit - Session Crash Watchdog for %i
After=default.target

[Service]
Type=simple
Environment="PYTHONPATH=/usr/lib/python3/dist-packages"
Environment="PYTHONPATH=/usr/lib/python3/dist-packages"
ExecStart=/usr/bin/python3 /usr/sbin/mutter-watchdog.py --data-dir %h/.config/mutter-watchdog
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
